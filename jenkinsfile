pipeline {
    environment { 
        registry = "grajappan4401/cclookup" 
        registryCredential = 'DockerHub-Creds' 
        dockerImage = ''
    }
    agent {
        label 'logslave1'
    }
    stages { 
        stage('Building our image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":jenkinsbuild" 
                }
            } 
        }
        stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( 'registry.hub.docker.com', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        }     
        stage ('Deploy to Kube cluster') {
            steps {
                kubernetesDeploy (
                    configs: 'cclookup.yaml', 
                    kubeConfig: [path: ''], 
                    kubeconfigId: 'Kube Connection', 
                    secretName: '', 
                    ssh: [sshCredentialsId: '*', sshServer: ''], 
                    textCredentials: [certificateAuthorityData: '', clientCertificateData: '', clientKeyData: '', serverUrl: 'https://']
                )
            }
        }
    }
}


